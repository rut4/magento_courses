<config>
    <modules>
        <Oggetto_Blog>
            <version>0.1.0</version>
        </Oggetto_Blog>
    </modules>
    <global>
        <blocks>
            <blog>
                <class>Oggetto_Blog_Block</class>
            </blog>
        </blocks>
        <helpers>
            <blog>
                <class>Oggetto_Blog_Helper</class>
            </blog>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Oggetto_Blog>Oggetto_Blog_Adminhtml</Oggetto_Blog>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <blog>
                    <file>blog.xml</file>
                </blog>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <blog>
                            <title>Oggetto Blog</title>
                            <children>
                                <tree translate="title">
                                    <title>Post Tree</title>
                                </tree>
                            </children>
                        </blog>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
