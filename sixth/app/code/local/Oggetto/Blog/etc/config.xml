<config>
    <modules>
        <Oggetto_Blog>
            <version>0.1.0</version>
        </Oggetto_Blog>
    </modules>
    <global>
        <models>
            <blog>
                <class>Oggetto_Blog_Model</class>
                <resourceModel>blog_resource</resourceModel>
            </blog>
            <blog_resource>
                <class>Oggetto_Blog_Model_Resource</class>
                <entities>
                    <category>
                        <table>oggetto_blog_category</table>
                    </category>
                    <post>
                        <table>oggetto_blog_post</table>
                    </post>
                </entities>
            </blog_resource>
        </models>
        <blocks>
            <blog>
                <class>Oggetto_Blog_Block</class>
            </blog>
        </blocks>
        <helpers>
            <blog>
                <class>Oggetto_Blog_Helper</class>
            </blog>
        </helpers>
        <resources>
            <blog_setup>
                <setup>
                    <module>Oggetto_Blog</module>
                </setup>
            </blog_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Oggetto_Blog>Oggetto_Blog_Adminhtml</Oggetto_Blog>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <blog>
                    <file>blog.xml</file>
                </blog>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <blog>
                            <title>Oggetto Blog</title>
                            <children>
                                <tree translate="title">
                                    <title>Post Tree</title>
                                </tree>
                                <post translate="title">
                                    <title>Post Grid</title>
                                </post>
                            </children>
                        </blog>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <phpunit>
        <suite>
            <modules>
                <Oggetto_Blog />
            </modules>
        </suite>
    </phpunit>
</config>
