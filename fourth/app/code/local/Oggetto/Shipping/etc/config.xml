<config>
    <modules>
        <Oggetto_Shipping>
            <version>0.1.0</version>
        </Oggetto_Shipping>
    </modules>
    <global>
        <models>
            <oggettoshipping>
                <class>Oggetto_Shipping_Model</class>
            </oggettoshipping>
        </models>
        <helpers>
            <oggettoshipping>
                <class>Oggetto_Shipping_Helper</class>
            </oggettoshipping>
        </helpers>
        <resources>
            <oggettoshipping_setup>
                <setup>
                    <module>Oggetto_Shipping</module>
                </setup>
            </oggettoshipping_setup>
        </resources>
    </global>
    <default>
        <carriers>
            <oggetto>
                <active>1</active>
                <model>oggettoshipping/carrier_oggetto</model>
                <title>Oggetto</title>
                <sort_order>10</sort_order>
                <sallowspecific>1</sallowspecific>
            </oggetto>
        </carriers>
    </default>
    <frontend>
        <translate>
            <modules>
                <Oggetto_Shipping>
                    <files>
                        <default>Oggetto_Shipping.csv</default>
                    </files>
                </Oggetto_Shipping>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Oggetto_Shipping>
                    <files>
                        <default>Oggetto_Shipping.csv</default>
                    </files>
                </Oggetto_Shipping>
            </modules>
        </translate>
    </adminhtml>
</config>
